
# flappy_game.py
import tkinter as tk
from random import randint
from background import set_background

class FlappyBirdGame:
    def __init__(self, root):
        self.root = root
        self.canvas = tk.Canvas(self.root, width=400, height=600)
        self.canvas.pack()

        set_background(self.canvas)  # Set background to green

        self.bird = self.canvas.create_oval(50, 250, 90, 290, fill='yellow')
        self.gravity = 3
        self.bird_speed = 0
        self.is_game_over = False
        self.pipes = []

        # Key bindings for bird movement
        self.root.bind("<space>", self.flap)

        # Create initial pipes
        self.create_pipe()

        # Start the game loop
        self.update_game()

    def create_pipe(self):
        """Create new pipe with random gap."""
        pipe_gap = 150
        pipe_width = 60
        gap_start = randint(100, 400)

        top_pipe = self.canvas.create_rectangle(400, 0, 400 + pipe_width, gap_start, fill="black")
        bottom_pipe = self.canvas.create_rectangle(400, gap_start + pipe_gap, 400 + pipe_width, 600, fill="black")
        self.pipes.append((top_pipe, bottom_pipe))

    def flap(self, event):
        """Make the bird flap upward."""
        self.bird_speed = -10

    def update_game(self):
        if not self.is_game_over:
            # Update bird position
            self.bird_speed += self.gravity
            self.canvas.move(self.bird, 0, self.bird_speed)

            # Get the bird's coordinates
            bird_coords = self.canvas.coords(self.bird)
            if bird_coords[1] <= 0 or bird_coords[3] >= 600:
                self.game_over()

            # Move and manage pipes
            self.move_pipes()
            self.check_collision()

            # Generate new pipes
            if len(self.pipes) > 0:
                pipe_coords = self.canvas.coords(self.pipes[-1][0])
                if pipe_coords[2] < 300:
                    self.create_pipe()

            # Continue game loop
            self.root.after(30, self.update_game)

    def move_pipes(self):
        """Move the pipes across the screen and remove off-screen pipes."""
        for pipe in self.pipes:
            self.canvas.move(pipe[0], -5, 0)
            self.canvas.move(pipe[1], -5, 0)

        # Remove pipes that are off-screen
        self.pipes = [pipe for pipe in self.pipes if self.canvas.coords(pipe[0])[2] > 0]

    def check_collision(self):
        """Check for collisions between the bird and the pipes."""
        bird_coords = self.canvas.bbox(self.bird)
        for pipe in self.pipes:
            top_pipe_coords = self.canvas.bbox(pipe[0])
            bottom_pipe_coords = self.canvas.bbox(pipe[1])

            # Check if bird hits top or bottom pipes
            if self.rect_overlap(bird_coords, top_pipe_coords) or self.rect_overlap(bird_coords, bottom_pipe_coords):
                self.game_over()

    def rect_overlap(self, rect1, rect2):
        """Check if two rectangles overlap."""
        return not (rect1[2] < rect2[0] or rect1[0] > rect2[2] or rect1[3] < rect2[1] or rect1[1] > rect2[3])

    def game_over(self):
        """Handle game over."""
        self.is_game_over = True
        self.canvas.create_text(200, 300, text="Game Over", font=('Helvetica', 24), fill='red')

if __name__ == "__main__":
    root = tk.Tk()
    root.title("Flappy Bird")
    game = FlappyBirdGame(root)
    root.mainloop()
